generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./db.db"
}

model Episode {
  id       String    @id @default(cuid())
  path     String    @unique
  watched  Boolean   @default(false)
  seriesId String
  length   Int
  series   Series    @relation(fields: [seriesId], references: [id], onDelete: Cascade)
  History  History[]
  Scenes   Scenes[]
}

model Series {
  id      String    @id @default(cuid())
  name    String    @unique
  Episode Episode[]
  Scenes  Scenes[]
}

model History {
  episodeId String
  createdAt DateTime @id @unique @default(now())
  episode   Episode  @relation(fields: [episodeId], references: [id], onDelete: Cascade)
}

model Scenes {
  id        String  @id @default(cuid())
  name      String  @unique
  views     Int     @default(0)
  startTime Int
  endTime   Int
  episodeId String
  seriesId  String
  series    Series  @relation(fields: [seriesId], references: [id], onDelete: Cascade)
  episode   Episode @relation(fields: [episodeId], references: [id], onDelete: Cascade)
}
